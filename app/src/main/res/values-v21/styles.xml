<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <color name="background_color">@color/gray_300</color>

    <style name="LittleTalkersTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:actionBarItemBackground">@drawable/ab_item_background</item>
        <item name="android:selectableItemBackground">@drawable/ab_item_background</item>
        <item name="android:spinnerStyle">@style/MySpinners</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
    </style>

    <style name="BasicTheme" parent="Theme.AppCompat"></style>

    <style name="OverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="KidSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
        <item name="android:background">@drawable/ab_item_background</item>
    </style>

    <style name="DictionaryStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DictionaryWordStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DictionaryDateStyle">
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:backgroundStacked">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="LittleTalkers.ActionBar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeadingStyle">
        <item name="android:textSize">@dimen/heading_size_large</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="HeadingStyleQA">
        <item name="android:textSize">@dimen/heading_size_medium</item>
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MySpinners" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">16sp</item>
    </style>

</resources>