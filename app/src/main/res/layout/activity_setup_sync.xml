<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/actionbar" />

    <RelativeLayout
        android:layout_width="@dimen/breakpoint_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingStart="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1"
        android:paddingEnd="@dimen/keyline_1"
        android:layout_margin="@dimen/keyline_1"
        android:elevation="4dp"
        android:background="@color/white"
        tools:context=".ui.SetupSyncActivity">

        <TextView
            android:id="@+id/txtSyncExplanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/sync_explanation"/>

        <TextView
            android:id="@+id/txtSyncExplanation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtSyncExplanation"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/sync_explanation2"/>

        <Button
            android:id="@+id/buttonEnableSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/blue"
            android:padding="5dp"
            android:contentDescription="@string/sync_title"
            android:textColor="@color/white"
            android:text="@string/sync_title"
            android:onClick="setupSync"/>

        <TextView
            android:id="@+id/txtSyncUpdateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonEnableSync"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</LinearLayout>